<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="color-scheme" content="dark light" />

<!-- SEO de base -->
<meta name="description" content="Blog Interactif — lire, commenter et partager des articles." />
<meta name="author" content="<%= (locals.authorName || 'Adolph Nkula') %>" />

<!-- Open Graph / partage -->
<meta property="og:type" content="website" />
<meta property="og:title" content="<%= pageTitle ? (pageTitle + ' – Blog Interactif') : 'Blog Interactif' %>" />
<meta property="og:description" content="Articles, catégories, tags et commentaires." />
<meta property="og:image" content="/assets/og.png" />
<meta property="og:locale" content="fr_CA" />

<!-- Favicon & icône -->
<link rel="icon" href="/assets/favicon.ico" />

<!-- Polices -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
